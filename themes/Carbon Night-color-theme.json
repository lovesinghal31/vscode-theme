{
  "name": "Carbon Night — Subtle Black Shaded",
  "colors": {
    "editor.background": "#000000",

    /* Editor line differentiation */
    "editor.lineHighlightBackground": "#0A78F508",
    "editor.lineHighlightBorder": "#0A78F520",
    "editorLineNumber.foreground": "#4A5156",
    "editorLineNumber.activeForeground": "#7EA7FF",
    "editorIndentGuide.background1": "#151515",
    "editorIndentGuide.activeBackground1": "#0A78F560",

    /* Subtle borders to separate sections */
    "focusBorder": "#7EA7FF",
    "widget.shadow": "#0A78F560",
    "sideBar.border": "#1A1A1A",
    "panel.border": "#1A1A1A",
    "editorGroup.border": "#1A1A1A",
    "editorGroupHeader.border": "#0F0F0F",
    "statusBar.border": "#0F0F0F",
    "activityBar.border": "#1A1A1A",
    "editorWidget.border": "#1A1A1A",
    "editorHoverWidget.border": "#1A1A1A",
    "input.border": "#1A1A1A",
    "dropdown.border": "#1A1A1A",

    /* Command Palette / Quick Pick (Ctrl+Shift+P) */
    "quickInput.background": "#0B0B0B",
    "quickInput.foreground": "#D0D3D6",
    "quickInputTitle.background": "#070707",
    "pickerGroup.border": "#1A1A1A",
    "pickerGroup.foreground": "#8F969A",
    "quickInputList.focusBackground": "#0A78F526",
    "quickInputList.focusForeground": "#E0E0E0",
    "quickInputList.focusIconForeground": "#7EA7FF",

    /* Copilot Chat / Chat UI */
    "chat.requestBorder": "#1A1A1A",
    "chat.requestBackground": "#050505",
    "chat.requestBubbleBackground": "#ffffff00",
    "chat.requestBubbleHoverBackground": "#07070700",
    "chat.requestCodeBorder": "#1A1A1A00",
    "chat.slashCommandBackground": "#0F0F0F",
    "chat.slashCommandForeground": "#D0D3D6",
    "chat.avatarBackground": "#0F0F0F",
    "chat.avatarForeground": "#D0D3D6",
    "chat.editedFileForeground": "#9FB2E2",
    "chat.linesAddedForeground": "#8fbfa000",
    "chat.linesRemovedForeground": "#ff4c4c00",
    "chat.checkpointSeparator": "#1A1A1A",
    "chatManagement.sashBorder": "#1A1A1A",

    /* Inline Chat (editor Copilot input) */
    "inlineChat.background": "#000000",
    "inlineChat.foreground": "#D0D3D6",
    "inlineChat.border": "#0A78F540",
    "inlineChat.shadow": "#0A78F560",
    "inlineChatInput.background": "#000000",
    "inlineChatInput.border": "#0A78F533",
    "inlineChatInput.focusBorder": "#7EA7FF",
    "inlineChatInput.placeholderForeground": "#6A7075",

    "titleBar.activeBackground": "#000000",
    "titleBar.inactiveBackground": "#000000",
    "titleBar.activeForeground": "#D0D3D6",
    "titleBar.inactiveForeground": "#8A9094",

    "editorGroupHeader.tabsBackground": "#000000",
    "editorGroupHeader.noTabsBackground": "#000000",

    "tab.activeBackground": "#000000",
    "tab.inactiveBackground": "#000000",
    "tab.activeForeground": "#E0E0E0",
    "tab.inactiveForeground": "#7A848A",
    "tab.unfocusedActiveForeground": "#AEB3B6",
    "tab.unfocusedInactiveForeground": "#6A7075",
    "tab.border": "#0A0A0A",

    /* Tabs hover/focus accent (blue) */
    "tab.hoverBackground": "#0A78F514",
    "tab.hoverBorder": "#0A78F540",
    "tab.activeBorderTop": "#0A78F5",
    "tab.unfocusedActiveBorderTop": "#0A78F580",
    "tab.activeBorder": "#0A78F540",

    "breadcrumb.background": "#000000",
    "breadcrumb.foreground": "#8F969A",
    "breadcrumb.focusForeground": "#C9CDD0",

    "activityBar.background": "#000000",
    "panel.background": "#000000",
    "statusBar.background": "#000000",
    /* ===== EXPLORER / SIDEBAR BLACK ENFORCEMENT ===== */

    "sideBar.background": "#000000",
    "sideBar.foreground": "#A7B0B5",
    "sideBarSectionHeader.background": "#000000",
    "sideBarSectionHeader.foreground": "#D0D3D6",

    /* Explorer tree rows */
    "list.focusBackground": "#0A78F526",
    "list.inactiveSelectionBackground": "#0A78F51A",
    "list.activeSelectionBackground": "#0A78F533",
    "list.hoverBackground": "#0A78F514",
    "list.dropBackground": "#0A78F544",

    /* Row text colors (subtle) */
    "list.activeSelectionForeground": "#E0E0E0",
    "list.inactiveSelectionForeground": "#C8CCCF",
    "list.hoverForeground": "#D6D9DB",

    /* Indent guides (soft & subtle) */
    "tree.indentGuidesStroke": "#1A1A1A",

    /* Outline / peek backgrounds */
    "editorWidget.background": "#000000",
    "peekViewResult.background": "#000000",
    "peekViewEditor.background": "#000000",

    /* Scrollbars inside sidebar */
    "scrollbarSlider.background": "#111111AA",
    "scrollbarSlider.hoverBackground": "#1A1A1ACC",
    "scrollbarSlider.activeBackground": "#222222DD",

    /* Badge / git decorators (keep muted, not bright) */
    "gitDecoration.addedResourceForeground": "#8FBFA0",
    "gitDecoration.modifiedResourceForeground": "#9FB2E2",
    "gitDecoration.deletedResourceForeground": "#FF4C4C",
    "gitDecoration.untrackedResourceForeground": "#A6D3A8",

    /* Activity icons area */
    "activityBar.dropBorder": "#0F0F0F"
  },
  "tokenColors": [
    {
      "name": "Default",
      "scope": ["source", "text"],
      "settings": { "foreground": "#E6E6E6" }
    },
    {
      "name": "Comments",
      "scope": ["comment", "punctuation.definition.comment"],
      "settings": { "foreground": "#6B7280", "fontStyle": "italic" }
    },
    {
      "name": "Keywords",
      "scope": ["keyword", "storage", "storage.type", "storage.modifier"],
      "settings": { "foreground": "#C792EA" }
    },
    {
      "name": "Operators & Punctuation",
      "scope": [
        "keyword.operator",
        "punctuation",
        "punctuation.section",
        "punctuation.separator",
        "punctuation.terminator"
      ],
      "settings": { "foreground": "#89DDFF" }
    },
    {
      "name": "Arrow operator (=>)",
      "scope": [
        "keyword.operator.arrow",
        "storage.type.function.arrow",
        "punctuation.separator.arrow",
        "meta.arrow"
      ],
      "settings": { "foreground": "#89DDFF" }
    },
    {
      "name": "Types & Classes",
      "scope": [
        "entity.name.type",
        "entity.name.class",
        "entity.name.interface",
        "support.type",
        "support.class"
      ],
      "settings": { "foreground": "#4DD0E1" }
    },
    {
      "name": "Functions",
      "scope": [
        "entity.name.function",
        "support.function",
        "meta.function-call",
        "variable.function"
      ],
      "settings": { "foreground": "#82AAFF" }
    },
    {
      "name": "Strings",
      "scope": [
        "string",
        "string.quoted",
        "string.template",
        "punctuation.definition.string"
      ],
      "settings": { "foreground": "#C3E88D" }
    },
    {
      "name": "Numbers",
      "scope": ["constant.numeric"],
      "settings": { "foreground": "#FFCB6B" }
    },
    {
      "name": "Booleans / Null / Constants",
      "scope": [
        "constant.language",
        "constant.language.boolean",
        "constant.language.null",
        "constant.other"
      ],
      "settings": { "foreground": "#FF6FB1" }
    },
    {
      "name": "Variables & Parameters",
      "scope": [
        "variable",
        "variable.other",
        "variable.other.readwrite",
        "variable.other.property",
        "variable.other.member",
        "variable.parameter"
      ],
      "settings": { "foreground": "#F48FB1" }
    },

    /* ===== dotenv (.env) ===== */
    {
      "name": "dotenv — comments",
      "scope": [
        "source.dotenv comment",
        "source.env comment",
        "comment.line.number-sign.dotenv",
        "comment.line.number-sign.env",
        "punctuation.definition.comment.dotenv",
        "punctuation.definition.comment.env"
      ],
      "settings": { "foreground": "#6B7280", "fontStyle": "italic" }
    },
    {
      "name": "dotenv — comment marker (#)",
      "scope": [
        "source.dotenv punctuation.definition.comment",
        "source.env punctuation.definition.comment",
        "punctuation.definition.comment.dotenv",
        "punctuation.definition.comment.env"
      ],
      "settings": { "foreground": "#89DDFF" }
    },
    {
      "name": "dotenv — key",
      "scope": [
        "source.dotenv entity.name.tag",
        "source.dotenv variable.other",
        "source.dotenv variable.other.constant",
        "source.dotenv variable.other.readwrite",
        "source.env entity.name.tag",
        "source.env variable.other",
        "source.env variable.other.constant",
        "source.env variable.other.readwrite",
        "variable.other.env",
        "variable.other.readwrite.env",
        "entity.name.tag.env"
      ],
      "settings": { "foreground": "#82AAFF", "fontStyle": "bold" }
    },
    {
      "name": "dotenv — equals / punctuation",
      "scope": [
        "source.dotenv punctuation.separator.key-value",
        "source.dotenv punctuation.definition",
        "source.env punctuation.separator.key-value",
        "source.env punctuation.definition",
        "punctuation.separator.key-value.env",
        "punctuation.separator.key-value.dotenv"
      ],
      "settings": { "foreground": "#6B7280" }
    },
    {
      "name": "dotenv — value",
      "scope": [
        "source.dotenv string",
        "source.dotenv string.quoted",
        "source.dotenv string.quoted.single",
        "source.dotenv string.quoted.double",
        "source.dotenv string.unquoted",
        "source.dotenv constant.other",
        "source.env string",
        "source.env string.quoted",
        "source.env string.quoted.single",
        "source.env string.quoted.double",
        "source.env string.unquoted",
        "source.env constant.other",
        "string.unquoted.env",
        "string.quoted.single.env",
        "string.quoted.double.env",
        "constant.other.env"
      ],
      "settings": { "foreground": "#C3E88D" }
    },
    {
      "name": "dotenv — interpolation",
      "scope": [
        "source.dotenv meta.interpolation",
        "source.dotenv punctuation.definition.interpolation",
        "source.dotenv variable.other.interpolation",
        "source.env meta.interpolation",
        "source.env punctuation.definition.interpolation",
        "source.env variable.other.interpolation"
      ],
      "settings": { "foreground": "#C792EA" }
    },

    /* ===== JSON (.json) ===== */
    {
      "name": "JSON — keys",
      "scope": [
        "source.json meta.structure.dictionary.key string.quoted.double.json",
        "source.json support.type.property-name",
        "support.type.property-name.json"
      ],
      "settings": { "foreground": "#82AAFF" }
    },
    {
      "name": "JSON — strings",
      "scope": ["string.quoted.double.json", "string.quoted.single.json"],
      "settings": { "foreground": "#C3E88D" }
    },
    {
      "name": "JSON — numbers",
      "scope": ["constant.numeric.json"],
      "settings": { "foreground": "#FFCB6B" }
    },
    {
      "name": "JSON — booleans/null",
      "scope": ["constant.language.json"],
      "settings": { "foreground": "#FF5370" }
    },

    /* ===== Markdown (.md) ===== */
    {
      "name": "Markdown — headings",
      "scope": ["markup.heading", "entity.name.section.markdown"],
      "settings": { "foreground": "#FFCB6B", "fontStyle": "bold" }
    },
    {
      "name": "Markdown — bold",
      "scope": ["markup.bold"],
      "settings": { "foreground": "#FF5370", "fontStyle": "bold" }
    },
    {
      "name": "Markdown — italic",
      "scope": ["markup.italic"],
      "settings": { "foreground": "#C792EA", "fontStyle": "italic" }
    },
    {
      "name": "Markdown — inline code / code blocks",
      "scope": [
        "markup.inline.raw",
        "markup.fenced_code.block",
        "markup.raw.block"
      ],
      "settings": { "foreground": "#4DD0E1" }
    },
    {
      "name": "Markdown — links",
      "scope": ["markup.underline.link", "string.other.link"],
      "settings": { "foreground": "#82AAFF", "fontStyle": "underline" }
    },
    {
      "name": "Markdown — quotes",
      "scope": ["markup.quote"],
      "settings": { "foreground": "#6B7280", "fontStyle": "italic" }
    },
    {
      "name": "Markdown — list punctuation",
      "scope": ["punctuation.definition.list.begin.markdown"],
      "settings": { "foreground": "#89DDFF" }
    },

    /* ===== Tags / Attributes (HTML/JSX/etc) ===== */
    {
      "name": "Tags",
      "scope": ["entity.name.tag"],
      "settings": { "foreground": "#FF4FA3" }
    },
    {
      "name": "Attributes",
      "scope": ["entity.other.attribute-name", "meta.tag.attribute"],
      "settings": { "foreground": "#C792EA" }
    },

    /* ===== Errors ===== */
    {
      "name": "Errors",
      "scope": ["invalid", "invalid.illegal"],
      "settings": { "foreground": "#FF1744" }
    }
  ]
}
